<%= form_with model: [commentable, Comment.new], local: true do |form| %>
    <div class="mb-4 border border-gray-300">
      <%= form.label :body, "Add a comment", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :body, rows: 3, class: "w-full p-3 mt-1 ring-blue-500 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  
    <div class="mt-4">
      <%= form.submit "Post Comment", class: "w-full py-2 px-4 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>
  