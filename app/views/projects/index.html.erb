<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Projects</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @projects.each do |project| %>
      <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition">
        <h2 class="text-xl font-semibold text-gray-800"><%= project.name %></h2>
        
        <p class="mt-2 text-sm text-gray-600">
          Status: 
          <span class="px-2 py-1 rounded-md text-white
            <% case project.status
               when "pending" then %> bg-yellow-500
               <% when "in_progress" then %> bg-blue-500
               <% when "completed" then %> bg-green-500
               <% when "on_hold" then %> bg-red-500
               <% end %>">
            <%= project.status.humanize %>
          </span>
        </p>

        <div class="mt-4 flex justify-between items-center">
          <a href="<%= project_path(project) %>" 
             class="text-blue-500 hover:underline font-medium">View Details</a>
        </div>
      </div>
    <% end %>
  </div>

  <% if @projects.empty? %>
    <p class="text-center text-gray-500 mt-8">No projects available.</p>
  <% end %>
</div>
